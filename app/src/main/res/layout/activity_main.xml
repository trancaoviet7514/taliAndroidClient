<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/layout_server_address">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Server Address: "
            android:id="@+id/txt_server_address_label"
            tools:ignore="HardcodedText" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="https://taliserver.herokuapp.com"
            android:id="@+id/txt_server_address"
            tools:ignore="HardcodedText,LabelFor,TextFields" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/layout_server_port"
        app:layout_constraintTop_toBottomOf="@id/layout_server_address">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Server Port: "
            android:id="@+id/txt_server_port_label"
            tools:ignore="HardcodedText" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3484"
            android:id="@+id/txt_server_port"
            tools:ignore="HardcodedText"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status: Disconnect"
        android:id="@+id/txt_status"
        app:layout_constraintTop_toBottomOf="@id/layout_server_port"
        tools:ignore="HardcodedText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect to server"
        android:id="@+id/btn_connect_to_server"
        app:layout_constraintTop_toBottomOf="@id/txt_status"
        tools:ignore="HardcodedText"
        android:textAllCaps="false"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_go"
        app:layout_constraintBottom_toTopOf="@id/btn_back"
        android:text="Go"
        tools:ignore="HardcodedText" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_back"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Back"
        tools:ignore="HardcodedText" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_left"
        app:layout_constraintEnd_toStartOf="@id/btn_right"
        android:text="Left"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="HardcodedText" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_right"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Right"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="HardcodedText" />

</android.support.constraint.ConstraintLayout>